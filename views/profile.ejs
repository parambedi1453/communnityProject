<!DOCTYPE html>
<html >
    <head>
        <title>CQ</title>
        <meta name="viewport" content="width=device-width" initial-scale="1.0">
        <link href="/sidebar.css"  type = "text/css" rel="stylesheet">
        <link href="/header.css"  type = "text/css" rel="stylesheet">
        <!-- <link href = "profilecss.css" type="text/css" rel="stylesheet"> -->



        <style>

                .div-min-width
                {
                    min-width: 360px;
                }
                .imageDiv
                {
                    display: none;
                }
                #profilepic
                {
                    width: 150px;
                    height: 150px;
                    padding: 0.25rem;
                    background-color: #FCFCFC;
                    border: 1px solid #ccc;
                    border-radius: 0.25rem;
                    max-width: 100%;
                    box-shadow: 0 3px 10px 0 rgba(115,143,147,.3);
                }
                .panelDiv
                {
                    box-shadow: 0 3px 10px 0 rgba(115,143,147,.3);
                }
                .to-center-div
                {
                    margin-top: 2%;
                }
    
                @media (min-width: 768px)
                {
                    .imageDiv
                    {
                        display: block;
                    }
                    .to-center-div
                    {
                        margin-left:60px;
                    }
    
                }
            </style>
    
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" >
        <!-- BOOTSTRAP 3-->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
        
        
    </head>

    <body class="body">
        <% include partials/header.ejs %>
        <div id="viewscreen" >

            <% include partials/sidebar.ejs %>
            <div id="rightview">
                <div class="container-fluid div-min-width" style="padding:0">
                    <div class="row">
                        <div class="col-lg-12 parentDiv" style="padding:0">
                            <div class="to-center-div">

                                <div class="container childDiv">

                                    <div class="panel panel-default" style="background: rgb(249, 249, 249);box-shadow: 0 3px 10px 0 rgba(115,143,147,.3);">
                                        <div class="panel-body">

                                            <div class="d-flex imageDiv">
                                                <div class="image-container">
                                                    <!-- <img src="<%= obj.photoname %>" id="profilepic"> -->
                                                    <img src="/default.png" id="profilepic">

                                                </div>
                                            </div>
                                            <br>
                                            <br>
                                            <div class="col-sm-6">
                                                <div class="panel panel-default panelDiv">
                                                    <div class="panel-heading">Email</div>
                                                    <div class="panel-body"><%= obj.email %></div>
                                                </div>
                                            </div>

                                            <div class="col-sm-6">
                                                <div class="panel panel-default">
                                                    <div class="panel-heading">Gender</div>
                                                    <div class="panel-body"><%= obj.gender %></div>
                                                </div>
                                            </div>

                                            <div class="col-sm-6">
                                                <div class="panel panel-default">
                                                    <div class="panel-heading">Name</div>
                                                    <div class="panel-body"><%= obj.name %></div>
                                                </div>
                                            </div>

                                            <div class="col-sm-6">
                                                <div class="panel panel-default">
                                                    <div class="panel-heading">City</div>
                                                    <div class="panel-body"><%= obj.city %></div>
                                                </div>
                                            </div>

                                            <div class="col-sm-6">
                                                <div class="panel panel-default">
                                                    <div class="panel-heading">D.O.B</div>
                                                    <div class="panel-body"><%= obj.dob %></div>
                                                </div>
                                            </div>

                                            <div class="col-sm-6">
                                                <div class="panel panel-default">
                                                    <div class="panel-heading">Phone</div>
                                                    <div class="panel-body"><%= obj.phone %></div>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>

            </div>


        </div>

    </body>
    <script src="/openpanel.js">
    </script>
    <script>
        var colorLi = document.getElementById("sidebar-home");
        colorLi.setAttribute("style","background-color:#337ab7;");
    </script>
</html>
